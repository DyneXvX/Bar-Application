@page
@model RegisterModel
@using BarApplication.Utility
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            @if (User.IsInRole(Sd.Role_Manager))
            {<div class="border-bottom border-primary"> 
                <p>If the user already exist this will error out. I am not sure why as of now.</p>
                <p>This part has been killing me setting up for some reason today.</p>
            </div>
            }
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control"/>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(Sd.Role_Manager))
            {
                <div class="form-group">
                    <label asp-for="Input.Role"></label>
                    @Html.DropDownListFor(m => m.Input.Role, Model.Input.RoleList,
                        "Please Select Their Role", new {@class = "form-control"})
                </div>
            }
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-5 offset-2">
        <div class="container">
            <div class="row">
                <img src="~/images/drinks01.jpg" class="shadow-lg" alt="drinks" style="width: 100%"/>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}